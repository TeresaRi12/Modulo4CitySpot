rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Posters: Public read, Auth upload
    match /posters/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: Deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
